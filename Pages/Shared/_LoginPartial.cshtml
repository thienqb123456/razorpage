@using Microsoft.AspNetCore.Identity
@using ValorantMoments.Models; 
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@{


}


<ul class="navbar-nav">

    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item ">
             <a class="btn btn-primary " asp-area="Identity" asp-page="/Account/Manage/Index">@UserManager.GetUserName(User)</a>
        </li>

        <li class="nav-item">

            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-outline-primary">Logout</button>
            </form>
        </li>
    } else
    {
    <li class="nav-item ">
        <a class="btn btn-primary " asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>

    <li class="nav-item"> 
        <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    }
    

    
</ul>