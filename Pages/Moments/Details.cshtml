@page
@model ValorantMoments.Pages.Moments2.DetailsModel

<div>
    <h4>Moment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" asp-for>
            <label asp-for="@Model.Moment.MomentLink"></label>
            
        </dt>
        <dd class="col-sm-10">
            <div>
                <iframe 
                    width="560" 
                    height="315" 
                    src="https://www.youtube.com/embed/@Model.Moment.MomentLink" 
                    title="YouTube video player" 
                    frameborder="0" 
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen>
                </iframe>
            </div>
        </dd>

        <dt class="col-sm-2" asp-for>
            <label asp-for="@Model.Moment.Name"></label>
            
        </dt>
        <dd class="col-sm-10">
            <p>@Model.Moment.Name </p>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Moment.Author"></label>

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Moment.Author)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="@Model.Moment.Description"></label>

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Moment.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Moment?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
